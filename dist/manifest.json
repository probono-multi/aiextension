{
  "manifest_version": 3,
  "name": "Automation Designer",
  "version": "0.1",
  "description": "AI-assisted automation design extension",

  "permissions": ["storage", "scripting", "activeTab", "downloads"],
  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/picker.js"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "ui/popup.html"
  }
}
